{
    "singleQuote": true,
    "semi": true,
    "bracketSameLine": false,
    "endOfLine": "lf",
    "trailingComma": "es5",
    "arrowParens": "always",
    "vueIndentScriptAndStyle": false,
    "singleAttributePerLine": true,
    "plugins": ["@shufo/prettier-plugin-blade", "prettier-plugin-tailwindcss"],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade",
                "tabWidth": 4,
                "sortTailwindcssClasses": true,
            }
        }
    ]
}
